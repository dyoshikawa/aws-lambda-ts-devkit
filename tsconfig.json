{
  "compilerOptions": {
    "outDir": ".",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES5",
    "lib": [ "ES2015" ],
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}